<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="com.comeworld.app"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-sdk
		android:minSdkVersion="10"
		android:targetSdkVersion="18"/>

	<application
		android:name="com.comeworld.app.ComeWorldApplication"
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity
			android:name=".MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".LoginActivity"
			android:label="@string/app_name"
			android:theme="@style/Theme.TranslucentActionBar.ActionBar.Overlay"></activity>

		<activity
			android:name=".SimpleActivity"
			android:label="@string/app_name">
		</activity>

		<uses-library android:name="android.test.runner"/>
		<instrumentation
			android:name="android.test.InstrumentationTestRunner"
			android:label="Tests for com.comeworld.app.test"
			android:targetPackage="com.comeworld.app.test"/>

	</application>
</manifest>
